<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <% if post.photos.attached? %>
      <%= image_tag url_for(post.photos.first), class: 'card-img-top', alt: 'Post Image' %>
    <% else %>
      <%= image_tag 'default_image.png', class: 'card-img-top', alt: 'Default Image' %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.description %></p>
      <p class="card-text"><small class="text-muted">Posted on <%= post.created_at.strftime("%d %B %Y") %></small></p>
      <p class="card-text"><small class="text-muted">Viewed <%= post.views_count %> times</small></p>
      <p class="card-text"><small class="text-muted">Photos <%= post.photos.count %></small></p>

      <div class="btn-group" role="group" aria-label="Post Actions">
        <%= link_to 'ðŸ‘€ Show', post_path(post), class: 'btn btn-info' %>
        <% if post.user == current_user %>
          <%= link_to 'ðŸ–Š Edit', edit_post_path(post), class: 'btn btn-primary' %>
          <%= link_to 'âŒ Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        <% if already_liked?(current_user, post) %>
          <%= link_to 'ðŸ‘Ž Unlike', post_like_path(post, current_user.likes.find_by(likeable: post)), method: :delete, class: 'btn btn-warning' %>
        <% else %>
          <%= link_to 'ðŸ‘ Like', post_likes_path(post), method: :post, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
