<div class="container mt-4">
  <h1>Your Notifications</h1>

  <% if @notifications.any? %>
    <div class="list-group mt-5 mb-5">
      <% @notifications.each do |notification| %>
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= notification_action(notification) %>
          <small class="text-muted"><%= time_ago_in_words(notification.created_at) %> ago</small>
          <div>
            <%= link_to 'Mark as Read', mark_as_read_notification_path(notification), method: :post, class: "btn btn-sm btn-success", data: { confirm: "Mark this notification as read?" } %>
            <%= link_to 'Delete', notification_path(notification), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= will_paginate @notifications, renderer: BootstrapPagination::Rails %>
    </div>
  <% else %>
    <p class="alert alert-info">You have no notifications.</p>
  <% end %>
</div>
