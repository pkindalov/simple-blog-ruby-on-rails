<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h4><%= @post.title %></h4>
        </div>
        <div class="card-body">

          <p>ğŸ‘ <%= @post.views_count %> views</p>
          <p>ğŸ“„ <%= raw @post.description %></p>
          <p>ğŸ“… Posted on <%= @post.post_date %></p>
          <p>ğŸ‘ Likes : <%= @post.likes.count %></p>
          <p>ğŸ—£ Comments : <%= @total_comments_count %></p>
          <hr/>
          <div class="d-flex justify-content-start align-items-center flex-wrap mt-3 mb-3">
            <span class="fw-bold me-1">ğŸ‘¤ Author:</span>
            <%= link_to @post.user.email, user_profile_path(@post.user), class: "text-decoration-none text-truncate", style: "max-width: 200px;" %>
          </div>
          <hr/>

          <!-- Bootstrap Carousel for Photos -->
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% @post.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= image_tag photo, class: 'd-block w-100' %>
                </div>
              <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <%#= link_to 'ğŸ’¾ Download as PDF', download_pdf_post_path(@post), class: 'btn btn-primary mt-3 mb-3' %>

          <div class="mt-3 mb-3">
            <button class="btn btn-primary download-pdf-button" data-post-id="<%= @post.id %>" data-url="/posts/<%= @post.id %>/download_pdf">Download
              PDF
            </button>
            <a href="#" class="btn disabled">ğŸ‘‡ <%= @post.downloaded_as_pdf || 0 %></a>
          </div>

          <!-- Comments Section -->
          <section>
            <h3 class="mb-5">Comments:</h3>
            <div class="list-group">
              <% @comments.each do |comment| %>
                <div class="list-group-item list-group-item-action flex-column align-items-start">
                  <div class="d-flex w-100 justify-content-between mt-3 mb-3">
                    <h5 class="mb-3"><%= comment.user.email %></h5>
                    <small><%= time_ago_in_words(comment.created_at) %> ago</small>
                  </div>
                  <p class="mb-3 mt-3"><%= raw comment.content %></p>

                  <% if current_user.id != comment.user_id %>
                    <% if current_user.likes.where(likeable: comment).exists? %>
                      <%= link_to 'ğŸ‘ Unlike', post_comment_like_path(@post, comment, current_user.likes.find_by(likeable: comment)), method: :delete, class: 'btn btn-warning mb-2' %>
                    <% else %>
                      <%= link_to 'ğŸ‘ Like', post_comment_likes_path(@post, comment), method: :post, class: 'btn btn-success mb-2' %>
                    <% end %>

                  <% end %>

                  <a href="#" class="btn disabled mb-2">ğŸ‘¥ ğŸ‘ <%= comment.likes.count %></a>

                  <% if current_user.id == comment.user_id %>
                    <%= link_to 'âœï¸ Edit', edit_post_comment_path(@post, comment), class: 'btn btn-secondary mb-2' %>
                    <%= link_to 'âŒ Delete', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mb-2' %>
                  <% end %>

                </div>
              <% end %>

              <div class="text-center">
                <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
              </div>
            </div>

            <%= form_with(model: [@post, @comment], local: true) do |form| %>
              <div class="form-group mt-3 mb-3">
                <%= form.text_area :content, class: 'form-control ckeditor', rows: 3 %>
              </div>
              <%= form.submit "Add Comment", class: 'btn btn-primary' %>
            <% end %>

          </section>

          <div class="mt-5" style="display: flex; justify-content: space-between;">
            <div>
              <% unless current_user == @post.user %>
                <% if already_liked?(current_user, @post) %>
                  <%= link_to 'ğŸ‘ Unlike', post_like_path(@post, @post.likes.find_by(user_id: current_user.id)), method: :delete, class: 'btn btn-primary' %>
                <% else %>
                  <%= link_to 'ğŸ‘ Like', post_likes_path(@post), method: :post, class: 'btn btn-primary' %>
                <% end %>
              <% end %>

              <a href="#" class="btn disabled">ğŸ‘¥ ğŸ‘ <%= @post.likes.count %></a>
            </div>
            <div style="margin-left: auto;">
              <%= link_to 'Back to Posts', posts_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
