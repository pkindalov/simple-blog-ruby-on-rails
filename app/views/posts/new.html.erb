<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h4>Create Post</h4>
        </div>
        <div class="card-body">
          <%= form_for Post.new, url: posts_path, html: { multipart: true } do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group mt-3">
              <%= f.label :description %>
              <!-- Добавяме клас 'ckeditor' за инициализация на CKEditor 5 -->
              <%= f.text_area :description, class: 'form-control ckeditor' %>
            </div>
            <div class="form-group mt-3">
              <%= f.label :post_date %>
              <%= f.date_field :post_date, class: 'form-control' %>
            </div>
            <div class="form-group mt-3">
              <%= f.label :photos, "Upload Photos" %>
              <%= f.file_field :photos, multiple: true, class: 'form-control' %>
            </div>
            <div class="form-group mt-3">
              <%= f.submit 'Create', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
