<!-- app/views/posts/show.html.erb -->
<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title"><%= @post.title %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @post.description %></p>
      <p class="card-text"><small class="text-muted">Posted on: <%= @post.post_date %></small></p>
      <% if @post.photo.attached? %>
        <div class="text-center">
          <%= image_tag @post.photo, class: 'img-fluid', alt: @post.title %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted text-center">
      <% if @post.user_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary mx-2' %>
        <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mx-2' %>
      <% end %>
      <%= link_to 'Back to Posts', posts_path, class: 'btn btn-secondary mx-2' %>
    </div>
  </div>
</div>
