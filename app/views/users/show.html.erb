<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <h4 class="card-title"><%= @user.email %></h4>
          <p class="card-text">Joined: <%= @user.created_at.strftime("%B %d, %Y") %></p>
          <%= link_to 'Settings', user_settings_path(@user), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <h3>Posts</h3>
      <% if @user.respond_to?(:posts) && @user.posts.any? %>
        <ul class="list-group">
          <% @user.posts.each do |post| %>
            <li class="list-group-item">
              <%= link_to post.title, "#" %> <!-- Тук можеш да промениш връзката, когато имаш пътя за поста -->
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">This user hasn't posted anything yet.</p>
      <% end %>
    </div>
  </div>
</div>
