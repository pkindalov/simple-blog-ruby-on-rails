<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <% if post.photos.attached? %>
      <% if post.photos.count > 1 %>
        <div id="carouselExampleIndicators-<%= post.id %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% post.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag photo, class: 'd-block w-100' %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators-<%= post.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators-<%= post.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <% else %>
        <%= image_tag url_for(post.photos.first), class: 'card-img-top', alt: 'Post Image' %>
      <% end %>
    <% else %>
      <%= image_tag 'default_image.png', class: 'card-img-top', alt: 'Default Image' %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title mb-5">ğŸ”– <%= post.title %></h5>
      <!-- Ğ˜Ğ·Ğ¿Ğ¾Ğ»Ğ·Ğ²Ğ°Ğ¼Ğµ raw Ğ·Ğ° Ğ¸Ğ·Ğ¾Ğ±Ñ€Ğ°Ğ·ÑĞ²Ğ°Ğ½Ğµ Ğ½Ğ° Ğ¾Ğ¿Ğ¸ÑĞ°Ğ½Ğ¸ĞµÑ‚Ğ¾ Ñ HTML Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğ¸Ñ€Ğ°Ğ½Ğµ -->
      <p class="card-text">ğŸ“„ <%= raw post.description %></p>

      <hr />
      <div class="d-flex justify-content-start align-items-center flex-wrap mt-3 mb-3">
        <span class="fw-bold me-1">ğŸ‘¤ Author:</span>
        <%= link_to post.user.email, user_profile_path(post.user), class: "text-decoration-none text-truncate", style: "max-width: 200px;" %>
      </div>
      <hr />

      <p class="card-text">ğŸ“… <small class="text-muted">Posted on <%= post.created_at.strftime("%d %B %Y") %></small></p>
      <p class="card-text">ğŸ‘ <small class="text-muted">Viewed <%= post.views_count %> times</small></p>
      <p class="card-text">ğŸ“· <small class="text-muted">Photos <%= post.photos.count %></small></p>
      <p class="card-text">ğŸ—£ <small class="text-muted">Comments <%= post.comments.count || 0 %></small></p>

      <p class="card-text mb-5">ğŸ’¾ <small class="text-muted">
        Download As PDF
        <button class="btn btn-primary download-pdf-button" data-post-id="<%= post.id %>" data-url="/posts/<%= post.id %>/download_pdf">Download
          PDF
        </button>
        <a href="#" class="btn disabled">ğŸ‘‡ <%= post.downloaded_as_pdf || 0 %></a>
      </small></p>
      <hr />
      <div class="btn-group" role="group" aria-label="Post Actions">
        <%= link_to 'ğŸ‘€ Show', post_path(post), class: 'btn btn-info' %>
        <% if post.user == current_user %>
          <%= link_to 'ğŸ–Š Edit', edit_post_path(post), class: 'btn btn-primary' %>
          <%= link_to 'âŒ Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        <% if already_liked?(current_user, post) %>
          <%= link_to 'ğŸ‘ Unlike', post_like_path(post, current_user.likes.find_by(likeable: post)), method: :delete, class: 'btn btn-warning' %>
        <% else %>
          <%= link_to 'ğŸ‘ Like', post_likes_path(post), method: :post, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
